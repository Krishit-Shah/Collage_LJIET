<html>
  <body>
    <p id="text">hello world</p>
    <button onclick="toUpper()">Upper</button>
    <button onclick="toLower()">Lower</button>
    <p id="output"></p>

    <script>
      function toUpper() {
        var text = document.getElementById("text").innerHTML;
        document.getElementById("output").innerHTML = text.toUpperCase();
      }

      function toLower() {
        var text = document.getElementById("text").innerHTML;
        document.getElementById("output").innerHTML = text.toLowerCase();
      }
    </script>
  </body>
</html>
